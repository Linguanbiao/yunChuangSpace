{"ast":null,"code":"//\n//\n//\n//\n//\n//\nimport Loading from \"@/components/Loading.vue\";\nimport Message from \"./Message.vue\";\nexport default {\n  components: {\n    Message: Message\n  },\n  methods: {\n    handleScroll: function handleScroll() {\n      this.$bus.$emit(\"msgScroll\", this.$refs.msgContainer);\n    }\n  },\n  mounted: function mounted() {\n    // 元素挂载以后，添加一个页面监听事件\n    this.$refs.msgContainer.addEventListener(\"scroll\", this.handleScroll);\n  },\n  beforeDestroy: function beforeDestroy() {\n    this.$refs.msgContainer.removeEventListener(\"scroll\", this.handleScroll);\n  }\n};","map":{"version":3,"mappings":";;;;;;AAOA;AACA;AACA;EACAA;IACAC;EADA,CADA;EAIAC;IACAC,YADA,0BACA;MACA;IACA;EAHA,CAJA;EASAC,OATA,qBASA;IACA;IACA;EACA,CAZA;EAaAC,aAbA,2BAaA;IACA;EACA;AAfA","names":["components","Message","methods","handleScroll","mounted","beforeDestroy"],"sourceRoot":"src/views/Message","sources":["index.vue"],"sourcesContent":["<template>\n  <div class=\"messageContainer\" ref=\"msgContainer\">\n    <Message class=\"messageList\"></Message>\n  </div>\n</template>\n\n<script>\nimport Loading from \"@/components/Loading.vue\";\nimport Message from \"./Message.vue\";\nexport default {\n  components: {\n    Message,\n  },\n  methods: {\n    handleScroll() {\n      this.$bus.$emit(\"msgScroll\", this.$refs.msgContainer);\n    },\n  },\n  mounted() {\n    // 元素挂载以后，添加一个页面监听事件\n    this.$refs.msgContainer.addEventListener(\"scroll\", this.handleScroll);\n  },\n  beforeDestroy() {\n    this.$refs.msgContainer.removeEventListener(\"scroll\", this.handleScroll);\n  },\n};\n</script>\n\n<style lang=\"less\" scoped>\n.messageContainer {\n  width: 100%;\n  height: 100%;\n  box-sizing: border-box;\n  overflow-y: auto;\n  padding: 10px;\n  .messageList {\n    width: 900px;\n    height: 100%;\n    margin: 10px auto;\n  }\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}